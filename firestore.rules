
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow admins to read and write to the partners collection
    match /partners/{partnerId} {
      allow read, write: if request.auth != null && ('Admin' in request.auth.token.roles || 'Super Admin' in request.auth.token.roles);
    }
    match /partners/{document=**} {
       allow read, write: if request.auth != null && ('Admin' in request.auth.token.roles || 'Super Admin' in request.auth.token.roles);
    }

    // Allow Super Admins to manage admin users
    match /adminUsers/{userId} {
      allow read, write: if request.auth != null && 'Super Admin' in request.auth.token.roles;
    }
     match /adminUsers/{document=**} {
       allow read, write: if request.auth != null && 'Super Admin' in request.auth.token.roles;
    }
  }
}
