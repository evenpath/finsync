rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Check if the user has an Admin or Super Admin role.
    function isAdmin() {
      return request.auth != null && (request.auth.token.role == 'Admin' || request.auth.token.role == 'Super Admin');
    }

    // Check if the user has the Super Admin role.
    function isSuperAdmin() {
      return request.auth != null && request.auth.token.role == 'Super Admin';
    }

    // Admins can read and write to the partners collection.
    match /partners/{partnerId} {
      allow read, list, create, update, delete: if isAdmin();
    }

    // Only Super Admins can read and write to the adminUsers collection.
    match /adminUsers/{userId} {
      allow read, list, create, update, delete: if isSuperAdmin();
    }
  }
}
