rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check for Admin roles
    function isAdmin() {
      return request.auth.token.role == 'Admin' || request.auth.token.role == 'Super Admin';
    }

    // Helper function to check if the user belongs to the partner document being accessed
    function isUserInPartner(partnerId) {
      return request.auth.token.partnerId == partnerId;
    }

    // Admins can manage all partners and admin users
    match /partners/{partnerId} {
      allow list, read: if isAdmin();
      allow create, update, delete: if isAdmin();
      
      // A user associated with a partner can read their own partner document
      allow get: if isUserInPartner(partnerId);

      // Rules for partner sub-collections will go here in the future
      // e.g., match /employees/{employeeId} { ... }
    }
    
    match /adminUsers/{userId} {
      allow read, list: if isAdmin();
      // Only Super Admins can manage other admins
      allow write: if request.auth.token.role == 'Super Admin';
    }
  }
}
