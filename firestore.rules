rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow any authenticated user to read the list of admin users to check roles.
    match /adminUsers/{userId} {
      allow read, list;
    }

    // Secure the partners collection.
    match /partners/{partnerId} {
      // Only allow users with an 'Admin' or 'Super Admin' role to read, write, and list all partners.
      allow list, read, write: if request.auth.token.role in ['Admin', 'Super Admin'];
    }

    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
