rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to the partners collection only for Admin or Super Admin users.
    match /partners/{partnerId} {
      allow list, read, write: if request.auth != null && (request.auth.token.role == 'Admin' || request.auth.token.role == 'Super Admin');
    }

    // Allow read access to adminUsers for any Admin, but only Super Admins can write.
    match /adminUsers/{userId} {
      allow list, read: if request.auth != null && (request.auth.token.role == 'Admin' || request.auth.token.role == 'Super Admin');
      allow write: if request.auth != null && request.auth.token.role == 'Super Admin';
    }
  }
}
