rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow read/write access to the partners collection for Admin or Super Admin users.
    match /partners/{partnerId} {
      allow read, write: if request.auth != null && (request.auth.token.roles[0] == 'Admin' || request.auth.token.roles[0] == 'Super Admin');
    }
    match /partners {
       allow list: if request.auth != null && (request.auth.token.roles[0] == 'Admin' || request.auth.token.roles[0] == 'Super Admin');
    }

    // Allow Super Admins to manage other admin users.
    match /adminUsers/{userId} {
      allow read, write: if request.auth != null && request.auth.token.roles[0] == 'Super Admin';
    }
    match /adminUsers {
      allow list: if request.auth != null && request.auth.token.roles[0] == 'Super Admin';
    }
  }
}
