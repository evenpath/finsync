rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow admins to read and write all partner documents
    match /partners/{partnerId} {
      allow read, write: if request.auth != null && (request.auth.token.role == 'Admin' || request.auth.token.role == 'Super Admin');
    }
    
    // Allow admins to list the partners collection
    match /partners {
        allow list: if request.auth != null && (request.auth.token.role == 'Admin' || request.auth.token.role == 'Super Admin');
    }

    // Allow Super Admins to read and write all admin user documents
    match /adminUsers/{userId} {
      allow read, write: if request.auth != null && request.auth.token.role == 'Super Admin';
    }
    
    // Allow Super Admins to list the adminUsers collection
    match /adminUsers {
        allow list: if request.auth != null && request.auth.token.role == 'Super Admin';
    }
  }
}
