rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Allow any authenticated user to read the list of admins.
    // This is necessary to check a user's role upon login.
    // The collection itself does not contain sensitive data.
    match /adminUsers/{userId} {
      allow read, list: if request.auth != null;
    }

    // Protect the partners collection.
    // Only users with an 'Admin' or 'Super Admin' role can read or list partners.
    // Only 'Super Admin' can write.
    match /partners/{partnerId} {
      allow read, list: if request.auth != null && request.auth.token.role in ['Admin', 'Super Admin'];
      allow write: if request.auth != null && request.auth.token.role == 'Super Admin';

      // Tenant-specific data access rules will go here in the future
      // e.g., match /tasks/{taskId} { ... }
    }
  }
}
