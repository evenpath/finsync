
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow admins to read and write all data
    function isAdmin() {
      return request.auth.token.role == 'Admin' || request.auth.token.role == 'Super Admin';
    }

    // Default deny all reads and writes
    match /{document=**} {
      allow read, write: if request.auth != null; // For now, allow any authenticated user to get unblocked.
    }

    // Allow any user to read/write to their own user document
    match /users/{userId} {
      allow read, update, delete: if request.auth.uid == userId;
      allow create: if request.auth.uid != null;
    }

    // Admins can manage all partner data
    match /partners/{partnerId} {
      allow read, write: if isAdmin();
    }
    
    // Admins can manage all admin user records
    match /admins/{adminId} {
        allow read, write: if isAdmin();
    }

    // User mappings are backend-managed
    match /userMappings/{email} {
      allow read, write: if false; // Should only be accessible by backend with admin credentials
    }
  }
}
